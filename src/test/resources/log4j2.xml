<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="Info">
  
  <!-- Define properties -->
  <Properties>
    <Property name="basePath">./logs</Property>
  </Properties>

  <Appenders>
    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout>
        <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
      </PatternLayout>
    </Console>

    <!-- Rolling File Appender using properties -->
    <RollingFile name="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log">
      <PatternLayout>
        <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5Level %logger{36} - %m%n</Pattern>
      </PatternLayout>     
        <SizeBasedTriggeringPolicy size="5000"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <!-- Root logger references the console and rolling appenders -->
    <Root level="Debug"><!-- here you can use multiple log levels All<Trace<Debug<Info<Warn<Error<Fatal<Off-->
      <!--<AppenderRef ref="Console"/> -->
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>

</Configuration>